datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          String   @id @default(uuid())
    email       String   @unique
    firstName   String
    lastName    String
    username    String   @unique
    phonenumber String   @unique
    password    String
    profession  String
    document    String
    profilePic  String?
    isVerified  Boolean?
    posts       Post[]
}

model Post {
    id          String  @id @default(uuid())
    title       String
    description String
    author      User    @relation(fields: [authorId], references: [id])
    authorId    String
    upvotes     Int     @default(0)
    image       String?
    tag         String
}
